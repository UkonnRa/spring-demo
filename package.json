{
  "name": "white-rabbit",
  "packageManager": "yarn@4.0.2",
  "version": "0.1.0",
  "engines": {
    "yarn": ">=4",
    "node": ">=20"
  },
  "private": true,
  "workspaces": [
    "packages/frontend-core",
    "packages/app-desktop"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@quasar/vite-plugin": "^1.6.0",
    "@types/eslint": "^8.56.2",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^1.1.3",
    "@vue/compiler-dom": "^3.4.10",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "commitlint": "^18.4.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-vue": "^9.20.0",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "markdownlint-cli": "^0.38.0",
    "postcss": "^8.4.33",
    "postcss-html": "^1.6.0",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.69.7",
    "sass-loader": "^13.3.3",
    "stylelint": "^16.1.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3",
    "vue": "^3.4.10",
    "vue-eslint-parser": "^9.4.0",
    "vue-tsc": "^1.8.27"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:java && yarn build:js",
    "build:js": "yarn workspaces foreach --from 'packages/*' -Rpitv run build",
    "build:java": "./gradlew nativeCompile",
    "lint": "yarn lint:prettier && yarn lint:stylelint && yarn lint:java && yarn lint:js",
    "lint:prettier": "yarn lint:base:prettier --check",
    "lint:stylelint": "stylelint '**/*.{vue,scss,css}' --ignore-path .eslintignore",
    "lint:java": "./gradlew check -x test",
    "lint:js": "yarn workspaces foreach --from 'packages/*' -Rpitv run lint",
    "lint:fix": "yarn lint:fix:prettier && yarn lint:fix:stylelint && yarn lint:fix:java && yarn lint:fix:js",
    "lint:fix:prettier": "yarn lint:base:prettier --write",
    "lint:fix:stylelint": "yarn lint:stylelint --fix",
    "lint:fix:java": "./gradlew spotlessApply",
    "lint:fix:js": "yarn workspaces foreach --from 'packages/*' -Rpitv run lint:fix",
    "lint:base:prettier": "prettier '**/*.{vue,ts,js,mjs,json}' --ignore-path .eslintignore",
    "upgrade": "yarn upgrade-interactive && ./gradlew dependencyUpdates",
    "test": "yarn test:java && yarn test:js",
    "test:java": "./gradlew test",
    "test:js": "yarn workspaces foreach --from 'packages/*' -Rpitv run test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
